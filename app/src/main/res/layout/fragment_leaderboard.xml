<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_main"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="120dp">

        <!-- Header with gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_leaderboard_header_flat"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaderboard"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Compete with debuggers worldwide!"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.8" />

            <!-- Time Filter Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_tab_selector_container"
                android:padding="4dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_weekly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Weekly"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_tab_selected"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_monthly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Monthly"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_all_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="All Time"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- Your Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_your_rank_card"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_glass_circle">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ðŸ‘¤"
                            android:textSize="28sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Rank"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:alpha="0.8" />

                        <TextView
                            android:id="@+id/text_user_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#47"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_user_league"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silver League"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:shadowColor="#80000000"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="3" />

                        <TextView
                            android:id="@+id/text_user_xp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,250 XP"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:alpha="0.9" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- Trophy and Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:id="@+id/text_user_trophies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="385 trophies"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:alpha="0.8" />
                    
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 15%"
                        android:textColor="@color/difficulty_easy"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Top 3 Podium -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- 2nd Place -->
                <LinearLayout
                    android:id="@+id/layout_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_rank_silver">
                        
                        <TextView
                            android:id="@+id/text_second_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ðŸ¥ˆ"
                            android:textSize="28sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/text_second_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="AlgoKing"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/text_second_xp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8,420 XP"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />
                        
                    <TextView
                        android:id="@+id/text_second_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lv.26"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- 1st Place -->
                <LinearLayout
                    android:id="@+id/layout_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_rank_gold">
                        
                        <TextView
                            android:id="@+id/text_first_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ðŸ†"
                            android:textSize="40sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/text_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="SpeedCoder"
                        android:textColor="@color/xp_gold"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/text_first_xp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8,750 XP"
                        android:textColor="@color/xp_gold_mid"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                        
                    <TextView
                        android:id="@+id/text_first_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lv.28"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 3rd Place -->
                <LinearLayout
                    android:id="@+id/layout_third"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_rank_bronze">
                        
                        <TextView
                            android:id="@+id/text_third_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ðŸ¥‰"
                            android:textSize="28sp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/text_third_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="FixerPro"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/text_third_xp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7,980 XP"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp" />
                        
                    <TextView
                        android:id="@+id/text_third_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lv.25"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Rankings Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rankings"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />
                
            <!-- Live indicator without drawable -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_live_dot" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Live"
                    android:textColor="@color/difficulty_easy"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            tools:itemCount="15"
            tools:listitem="@layout/item_leaderboard" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
