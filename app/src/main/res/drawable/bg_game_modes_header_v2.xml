<?xml version="1.0" encoding="utf-8"?>
<!--
    PREMIUM GAME MODES SCREEN BACKGROUND V2
    Epic cyber gradient with glow effects
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base deep space gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#0A0A1A"
                android:centerColor="#0D0D20"
                android:endColor="#0A0A1A"
                android:angle="270" />
        </shape>
    </item>

    <!-- Purple aurora glow - top left -->
    <item android:top="-100dp" android:left="-50dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.3"
                android:centerY="0.3"
                android:gradientRadius="300dp"
                android:startColor="#308B5CF6"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Cyan accent - right side -->
    <item android:right="-100dp" android:top="100dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.7"
                android:centerY="0.5"
                android:gradientRadius="250dp"
                android:startColor="#2006B6D4"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Red battle glow - bottom -->
    <item android:bottom="-150dp" android:left="100dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.8"
                android:gradientRadius="200dp"
                android:startColor="#15EF4444"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
