<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium">

        <!-- Welcome Header -->
        <TextView
            android:id="@+id/text_welcome"
            style="@style/TextAppearance.DebugMaster.Headline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_debugger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bug of the Day Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bug_of_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_welcome">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/label_bug_of_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bug_of_the_day"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:alpha="0.9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_bug_of_day_title"
                    style="@style/TextAppearance.DebugMaster.Headline2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="@string/loading"
                    android:textColor="?attr/colorOnPrimary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_bug_of_day"
                    tools:text="Off-by-One Error in Loop" />

                <!-- Chips Container -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_bug_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    app:singleLine="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_bug_of_day_title">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/easy"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/difficulty_easy"
                        app:chipCornerRadius="@dimen/chip_corner_radius"
                        style="@style/Widget.Material3.Chip.Assist"
                        tools:text="Easy" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textColor="?attr/colorOnPrimary"
                        app:chipBackgroundColor="@android:color/transparent"
                        app:chipStrokeColor="?attr/colorOnPrimary"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="@dimen/chip_corner_radius"
                        style="@style/Widget.Material3.Chip.Assist"
                        tools:text="Loops" />
                </com.google.android.material.chip.ChipGroup>

                <Button
                    android:id="@+id/button_solve_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/solve_now"
                    android:textColor="?attr/colorPrimary"
                    app:backgroundTint="?attr/colorOnPrimary"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chip_group_bug_info" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_bug_of_day">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_stats"
                    android:textColor="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:baselineAligned="false">

                    <!-- Solved Stats -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_solved_count"
                            style="@style/TextAppearance.DebugMaster.Headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorSecondary"
                            tools:text="5" />

                        <TextView
                            style="@style/TextAppearance.DebugMaster.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/solved" />
                    </LinearLayout>

                    <!-- Total Stats -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_total_bugs"
                            style="@style/TextAppearance.DebugMaster.Headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="?attr/colorPrimary"
                            tools:text="15" />

                        <TextView
                            style="@style/TextAppearance.DebugMaster.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total" />
                    </LinearLayout>

                    <!-- Streak Stats -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_streak_days"
                            style="@style/TextAppearance.DebugMaster.Headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FF9800"
                            tools:text="3" />

                        <TextView
                            style="@style/TextAppearance.DebugMaster.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_streak" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Level & XP Section -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextAppearance.DebugMaster.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/text_level"
                        style="@style/TextAppearance.DebugMaster.Headline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="1"
                        android:textColor="?attr/colorPrimary"
                        tools:text="5" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/text_xp_progress"
                        style="@style/TextAppearance.DebugMaster.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 100 XP"
                        tools:text="45 / 100 XP" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar_xp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="0" />

                <!-- Motivational Text -->
                <TextView
                    android:id="@+id/text_motivation"
                    style="@style/TextAppearance.DebugMaster.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_gravity="center"
                    android:text="@string/keep_going"
                    android:textStyle="italic"
                    tools:text="Keep your streak alive! ðŸ”¥" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Primary Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_all_bugs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/practice_all_bugs"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="start"
            app:cornerRadius="@dimen/button_corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_stats" />

        <!-- Secondary Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_my_progress"
            style="@style/Widget.DebugMaster.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/view_my_progress"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_all_bugs" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
