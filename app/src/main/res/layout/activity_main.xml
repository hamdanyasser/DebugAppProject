<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER ULTIMATE - MAIN ACTIVITY LAYOUT
     Premium Mimo-Style Navigation Shell -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_main"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Navigation Host - Full screen, behind bottom nav -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_content_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph" />

    <!-- Offline Indicator Banner -->
    <LinearLayout
        android:id="@+id/offline_banner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#E65100"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/card_bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cloud_off"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/offline_mode_message"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Bottom Navigation - Floating glass style -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:focusable="false"
        app:cardBackgroundColor="@color/cyber_surface"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/cyber_glow_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:elevation="0dp"
            app:itemActiveIndicatorStyle="@style/Widget.DebugMaster.BottomNavIndicator"
            app:itemIconSize="24dp"
            app:itemIconTint="@color/bottom_nav_color_selector"
            app:itemRippleColor="@color/primary_light"
            app:itemTextColor="@color/bottom_nav_color_selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
