<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.debugappproject.ui.splash.SplashFragment"
        android:label="DebugMaster"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splash_to_auth"
            app:destination="@id/authFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Auth Screen (Login/Register) -->
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.debugappproject.ui.auth.AuthFragment"
        android:label="Login"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_auth_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Onboarding Screen -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.debugappproject.ui.onboarding.OnboardingFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_onboarding">

        <action
            android:id="@+id/action_onboarding_to_auth"
            app:destination="@id/authFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ============================================== -->
    <!-- BOTTOM NAVIGATION DESTINATIONS                -->
    <!-- ============================================== -->

    <!-- Home Screen (Main Dashboard) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.debugappproject.ui.home.HomeFragment"
        android:label="DebugMaster"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_bugList"
            app:destination="@id/bugListFragment" />

        <action
            android:id="@+id/action_home_to_bugDetail"
            app:destination="@id/bugDetailFragment" />

        <action
            android:id="@+id/action_home_to_progress"
            app:destination="@id/progressFragment" />

        <action
            android:id="@+id/action_home_to_practice"
            app:destination="@id/practiceFragment" />

        <action
            android:id="@+id/action_home_to_battle"
            app:destination="@id/battleArenaFragment" />

        <action
            android:id="@+id/action_home_to_learn"
            app:destination="@id/learningPathsFragment" />

        <action
            android:id="@+id/action_home_to_premium"
            app:destination="@id/premiumFragment" />

        <action
            android:id="@+id/action_home_to_subscription"
            app:destination="@id/proSubscriptionFragment" />

        <action
            android:id="@+id/action_home_to_gameModes"
            app:destination="@id/gameModesFragment" />

        <action
            android:id="@+id/action_home_to_shop"
            app:destination="@id/shopFragment" />

        <action
            android:id="@+id/action_home_to_coop"
            app:destination="@id/coopFragment" />

        <action
            android:id="@+id/action_home_to_github"
            app:destination="@id/githubImportFragment" />

        <action
            android:id="@+id/action_home_to_teamAnalytics"
            app:destination="@id/teamAnalyticsFragment" />

        <action
            android:id="@+id/action_home_to_beginnerTutorial"
            app:destination="@id/beginnerTutorialFragment" />
    </fragment>

    <!-- Learning Paths Screen (Learn Tab) - Redesigned V2 -->
    <fragment
        android:id="@+id/learningPathsFragment"
        android:name="com.example.debugappproject.ui.learn.LearningPathsFragmentV2"
        android:label="Learn"
        tools:layout="@layout/fragment_learning_paths_v2">

        <action
            android:id="@+id/action_paths_to_pathDetail"
            app:destination="@id/pathDetailFragment" />

        <action
            android:id="@+id/action_paths_to_bugDetail"
            app:destination="@id/bugDetailFragment" />

        <action
            android:id="@+id/action_paths_to_premium"
            app:destination="@id/premiumFragment" />

        <action
            android:id="@+id/action_paths_to_subscription"
            app:destination="@id/proSubscriptionFragment" />
    </fragment>

    <!-- Leaderboard/Rank Screen (Rank Tab) -->
    <fragment
        android:id="@+id/leaderboardFragment"
        android:name="com.example.debugappproject.ui.leaderboard.LeaderboardFragment"
        android:label="Leaderboard"
        tools:layout="@layout/fragment_leaderboard">

        <action
            android:id="@+id/action_leaderboard_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <!-- Profile Screen (Profile Tab) -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.debugappproject.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile_to_settings"
            app:destination="@id/settingsFragment" />

        <action
            android:id="@+id/action_profile_to_premium"
            app:destination="@id/premiumFragment" />

        <action
            android:id="@+id/action_profile_to_subscription"
            app:destination="@id/proSubscriptionFragment" />

        <action
            android:id="@+id/action_profile_to_auth"
            app:destination="@id/authFragment" />

        <action
            android:id="@+id/action_profile_to_certificate"
            app:destination="@id/certificateFragment" />
    </fragment>

    <!-- ============================================== -->
    <!-- SECONDARY DESTINATIONS                        -->
    <!-- ============================================== -->

    <!-- Pro Subscription Screen -->
    <fragment
        android:id="@+id/proSubscriptionFragment"
        android:name="com.example.debugappproject.ui.subscription.ProSubscriptionFragment"
        android:label="Go Pro"
        tools:layout="@layout/fragment_pro_subscription" />

    <!-- Premium/Subscription Screen (legacy) -->
    <fragment
        android:id="@+id/premiumFragment"
        android:name="com.example.debugappproject.ui.premium.PremiumFragment"
        android:label="Go Pro"
        tools:layout="@layout/fragment_premium" />

    <!-- Gem Shop Screen -->
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.debugappproject.ui.shop.ShopFragment"
        android:label="Gem Shop"
        tools:layout="@layout/fragment_shop" />

    <!-- Practice Mode Screen -->
    <fragment
        android:id="@+id/practiceFragment"
        android:name="com.example.debugappproject.ui.practice.PracticeFragment"
        android:label="Practice Mode"
        tools:layout="@layout/fragment_practice">

        <action
            android:id="@+id/action_practice_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Battle Arena Screen -->
    <fragment
        android:id="@+id/battleArenaFragment"
        android:name="com.example.debugappproject.ui.battle.BattleArenaFragment"
        android:label="Battle Arena"
        tools:layout="@layout/fragment_battle_arena" />

    <!-- Bug of the Day Screen -->
    <fragment
        android:id="@+id/bugOfTheDayFragment"
        android:name="com.example.debugappproject.ui.bugofday.BugOfTheDayFragment"
        android:label="Bug of the Day"
        tools:layout="@layout/fragment_bug_of_day">

        <action
            android:id="@+id/action_bugOfDay_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Settings Screen -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.debugappproject.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- Path Detail Screen -->
    <fragment
        android:id="@+id/pathDetailFragment"
        android:name="com.example.debugappproject.ui.learn.PathDetailFragment"
        android:label="Path Details"
        tools:layout="@layout/fragment_path_detail">

        <argument
            android:name="pathId"
            app:argType="integer"
            android:defaultValue="1" />

        <action
            android:id="@+id/action_pathDetail_to_bugDetail"
            app:destination="@id/bugDetailFragment" />

        <action
            android:id="@+id/action_pathDetail_to_certificate"
            app:destination="@id/certificateFragment" />
    </fragment>

    <!-- Bug Detail Screen -->
    <fragment
        android:id="@+id/bugDetailFragment"
        android:name="com.example.debugappproject.ui.bugdetail.BugDetailFragment"
        android:label="Bug Details"
        tools:layout="@layout/fragment_bug_detail">

        <argument
            android:name="bugId"
            app:argType="integer"
            android:defaultValue="1" />

        <action
            android:id="@+id/action_bugDetail_to_mentor"
            app:destination="@id/mentorChatFragment" />

        <action
            android:id="@+id/action_bugDetail_to_debugger"
            app:destination="@id/debuggerFragment" />

        <action
            android:id="@+id/action_bugDetail_to_geminiChat"
            app:destination="@id/geminiChatFragment" />
    </fragment>

    <!-- Bug List Screen -->
    <fragment
        android:id="@+id/bugListFragment"
        android:name="com.example.debugappproject.ui.buglist.BugListFragment"
        android:label="All Bugs"
        tools:layout="@layout/fragment_bug_list">

        <action
            android:id="@+id/action_bugList_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Progress Screen -->
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.example.debugappproject.ui.progress.ProgressFragment"
        android:label="My Progress"
        tools:layout="@layout/fragment_progress" />

    <!-- Game Modes Hub -->
    <fragment
        android:id="@+id/gameModesFragment"
        android:name="com.example.debugappproject.ui.gamemodes.GameModesFragment"
        android:label="Game Modes"
        tools:layout="@layout/fragment_game_modes">

        <action
            android:id="@+id/action_gameModes_to_session"
            app:destination="@id/gameSessionFragment" />

        <action
            android:id="@+id/action_gameModes_to_battle"
            app:destination="@id/battleArenaFragment" />

        <action
            android:id="@+id/action_gameModes_to_learn"
            app:destination="@id/learningPathsFragment" />

        <action
            android:id="@+id/action_gameModes_to_subscription"
            app:destination="@id/proSubscriptionFragment" />

        <action
            android:id="@+id/action_gameModes_to_coop"
            app:destination="@id/coopFragment" />

        <action
            android:id="@+id/action_gameModes_to_multiFile"
            app:destination="@id/multiFileBugFragment" />
    </fragment>

    <!-- Interactive Lesson -->
    <fragment
        android:id="@+id/interactiveLessonFragment"
        android:name="com.example.debugappproject.ui.lesson.InteractiveLessonFragment"
        android:label="Interactive Lesson"
        tools:layout="@layout/fragment_interactive_lesson">

        <argument
            android:name="lessonId"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>

    <!-- Game Session -->
    <fragment
        android:id="@+id/gameSessionFragment"
        android:name="com.example.debugappproject.ui.gamemodes.GameSessionFragment"
        android:label="Game Session"
        tools:layout="@layout/fragment_game_session">

        <argument
            android:name="gameMode"
            app:argType="string"
            android:defaultValue="quick_fix" />
    </fragment>

    <!-- Beginner Tutorial -->
    <fragment
        android:id="@+id/beginnerTutorialFragment"
        android:name="com.example.debugappproject.ui.tutorial.BeginnerTutorialFragment"
        android:label="Beginner Tutorial"
        tools:layout="@layout/fragment_beginner_tutorial">

        <action
            android:id="@+id/action_tutorial_to_gameSession"
            app:destination="@id/gameSessionFragment" />
    </fragment>

    <!-- ============================================== -->
    <!-- NEW FEATURE DESTINATIONS                      -->
    <!-- ============================================== -->

    <!-- AI Mentor Chat (Quiz Game) -->
    <fragment
        android:id="@+id/mentorChatFragment"
        android:name="com.example.debugappproject.ui.mentor.MentorChatFragment"
        android:label="AI Mentor"
        tools:layout="@layout/fragment_mentor_game">

        <argument
            android:name="bug_id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <!-- Real AI Chat (Gemini Powered) -->
    <fragment
        android:id="@+id/geminiChatFragment"
        android:name="com.example.debugappproject.ai.GeminiChatFragment"
        android:label="AI Debug Mentor"
        tools:layout="@layout/fragment_gemini_chat">

        <argument
            android:name="bug_id"
            app:argType="integer"
            android:defaultValue="-1" />

        <argument
            android:name="bug_title"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="bug_code"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="bug_fixed"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="bug_explanation"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Interactive Debugger -->
    <fragment
        android:id="@+id/debuggerFragment"
        android:name="com.example.debugappproject.debugger.DebuggerFragment"
        android:label="Debugger"
        tools:layout="@layout/fragment_debugger_game">

        <argument
            android:name="bug_id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <!-- GitHub Import -->
    <fragment
        android:id="@+id/githubImportFragment"
        android:name="com.example.debugappproject.github.GitHubImportFragment"
        android:label="GitHub Import"
        tools:layout="@layout/fragment_bug_library" />

    <!-- Certificate -->
    <fragment
        android:id="@+id/certificateFragment"
        android:name="com.example.debugappproject.certificate.CertificateFragment"
        android:label="Certificate"
        tools:layout="@layout/fragment_certificate">

        <argument
            android:name="certificate_type"
            app:argType="string"
            android:defaultValue="PATH_COMPLETION" />

        <argument
            android:name="bugs_fixed"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="xp"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="path_name"
            app:argType="string"
            android:defaultValue="Debugging Fundamentals" />
    </fragment>

    <!-- Co-op Mode -->
    <fragment
        android:id="@+id/coopFragment"
        android:name="com.example.debugappproject.coop.CoopFragment"
        android:label="Co-op Mode"
        tools:layout="@layout/fragment_coop" />

    <!-- Multi-File Bug -->
    <fragment
        android:id="@+id/multiFileBugFragment"
        android:name="com.example.debugappproject.ui.multifile.MultiFileBugFragment"
        android:label="Multi-File Debug"
        tools:layout="@layout/fragment_multi_file_bug" />

    <!-- Team Analytics Dashboard (Corporate) -->
    <fragment
        android:id="@+id/teamAnalyticsFragment"
        android:name="com.example.debugappproject.corporate.TeamAnalyticsFragment"
        android:label="Team Analytics"
        tools:layout="@layout/fragment_team_analytics" />

</navigation>
