<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - Main Cyber Background for all screens -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base deep dark gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#050714"
                android:centerColor="#0A0F1E"
                android:endColor="#12082F"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle purple glow from top-right -->
    <item
        android:top="-200dp"
        android:right="-100dp">
        <shape android:shape="oval">
            <size android:width="400dp" android:height="400dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:startColor="#208B5CF6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Subtle cyan glow from bottom-left -->
    <item
        android:bottom="-150dp"
        android:left="-100dp">
        <shape android:shape="oval">
            <size android:width="350dp" android:height="350dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="175dp"
                android:startColor="#1506B6D4"
                android:endColor="#00000000" />
        </shape>
    </item>
    
</layer-list>
