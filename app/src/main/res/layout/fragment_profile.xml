<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - CYBER PROFILE SCREEN with Google Sign-In -->
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_main"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="120dp">

        <!-- Header with Settings Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Your Progress"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_cyber_card"
                android:src="@drawable/ic_settings"
                android:padding="12dp"
                android:contentDescription="Settings"
                app:tint="@color/cyber_neon_purple" />
        </LinearLayout>

        <!-- Account/Sync Section with Google Sign-In -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_cyber_card"
                android:padding="16dp">

                <!-- User Profile Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Profile Photo / Avatar Emoji -->
                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_circle_gradient">

                        <ImageView
                            android:id="@+id/image_user_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile_placeholder"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/text_user_avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ðŸ›"
                            android:textSize="28sp" />

                    </FrameLayout>

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            tools:text="Guest User" />

                        <TextView
                            android:id="@+id/text_user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="12sp"
                            android:textColor="@color/cyber_neon_blue"
                            android:alpha="0.8"
                            tools:text="Sign in to sync progress" />

                        <TextView
                            android:id="@+id/text_account_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="11sp"
                            android:textColor="@color/cyber_neon_green"
                            tools:text="Guest Mode" />

                    </LinearLayout>

                    <!-- Action Button (Go Pro / Manage) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_auth_action"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Go Pro"
                        android:textSize="12sp"
                        android:textColor="@color/cyber_bg_deep"
                        app:backgroundTint="@color/cyber_neon_gold"
                        app:cornerRadius="18dp" />

                </LinearLayout>

                <!-- Google Sign-In Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_google_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="Sign in with Google"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:backgroundTint="#4285F4"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_google"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@null"
                    android:visibility="visible" />

                <!-- Email Login Button (shown when guest) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_email_login"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="ðŸ“§ Login with Email"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:cornerRadius="24dp"
                    app:strokeColor="#3D3D54"
                    app:strokeWidth="1dp"
                    android:visibility="gone" />

                <!-- Sign Out Button (shown when signed in) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sign_out"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:text="Sign Out"
                    android:textColor="@color/cyber_neon_pink"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/cyber_neon_pink"
                    app:strokeWidth="1dp"
                    android:visibility="gone" />

                <!-- Sync Info (only shown when signed in) -->
                <TextView
                    android:id="@+id/text_last_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="11sp"
                    android:textColor="@color/cyber_neon_blue"
                    android:alpha="0.7"
                    android:visibility="gone"
                    tools:text="Last synced: 2 hours ago"
                    tools:visibility="visible" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cyber_hero_card"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Level Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL"
                        android:textSize="14sp"
                        android:textColor="@color/cyber_neon_blue"
                        android:letterSpacing="0.2" />

                    <TextView
                        android:id="@+id/text_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:textColor="@color/cyber_neon_purple"
                        android:shadowColor="@color/cyber_glow_purple"
                        android:shadowRadius="20"
                        tools:text="5" />

                </LinearLayout>

                <!-- XP Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_xp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        tools:text="45 / 100 XP" />

                    <ProgressBar
                        android:id="@+id/progress_xp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progressDrawable="@drawable/bg_cyber_loading_bar"
                        tools:progress="45" />

                </LinearLayout>

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Bugs Solved -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/bg_cyber_stats_card"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ›"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_bugs_solved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/cyber_neon_green"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bugs Solved"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <!-- Perfect Fixes -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/bg_cyber_stats_card"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_perfect_fixes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/cyber_neon_gold"
                            tools:text="8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perfect"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <!-- Current Streak -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/bg_cyber_stats_card"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_streak_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/cyber_neon_pink"
                            tools:text="7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day Streak"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:alpha="0.7" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Achievements Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ðŸ† Achievements"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_achievements_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/cyber_neon_blue"
            tools:text="5 of 15 unlocked" />

        <!-- Achievements RecyclerView (Grid) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            tools:listitem="@layout/item_achievement"
            tools:itemCount="6" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ†"
                android:textSize="64sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No achievements yet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Complete challenges to unlock achievements"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/cyber_neon_blue" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
