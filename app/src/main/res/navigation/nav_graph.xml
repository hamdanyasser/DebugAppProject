<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.debugappproject.ui.splash.SplashFragment"
        android:label="DebugMaster"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ============================================== -->
    <!-- BOTTOM NAVIGATION DESTINATIONS                -->
    <!-- ============================================== -->

    <!-- Home Screen (Main Dashboard) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.debugappproject.ui.home.HomeFragment"
        android:label="DebugMaster"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_bugList"
            app:destination="@id/bugListFragment" />

        <action
            android:id="@+id/action_home_to_bugDetail"
            app:destination="@id/bugDetailFragment" />

        <action
            android:id="@+id/action_home_to_progress"
            app:destination="@id/progressFragment" />

        <action
            android:id="@+id/action_home_to_practice"
            app:destination="@id/practiceFragment" />

        <action
            android:id="@+id/action_home_to_battle"
            app:destination="@id/battleArenaFragment" />

        <action
            android:id="@+id/action_home_to_learn"
            app:destination="@id/learningPathsFragment" />

        <action
            android:id="@+id/action_home_to_premium"
            app:destination="@id/premiumFragment" />

        <action
            android:id="@+id/action_home_to_subscription"
            app:destination="@id/proSubscriptionFragment" />
    </fragment>

    <!-- Learning Paths Screen (Learn Tab) -->
    <fragment
        android:id="@+id/learningPathsFragment"
        android:name="com.example.debugappproject.ui.learn.LearningPathsFragment"
        android:label="Learn"
        tools:layout="@layout/fragment_learning_paths">

        <action
            android:id="@+id/action_paths_to_pathDetail"
            app:destination="@id/pathDetailFragment" />

        <action
            android:id="@+id/action_paths_to_bugDetail"
            app:destination="@id/bugDetailFragment" />

        <action
            android:id="@+id/action_paths_to_premium"
            app:destination="@id/premiumFragment" />

        <action
            android:id="@+id/action_paths_to_subscription"
            app:destination="@id/proSubscriptionFragment" />
    </fragment>

    <!-- Leaderboard/Rank Screen (Rank Tab) -->
    <fragment
        android:id="@+id/leaderboardFragment"
        android:name="com.example.debugappproject.ui.leaderboard.LeaderboardFragment"
        android:label="Leaderboard"
        tools:layout="@layout/fragment_leaderboard">

        <action
            android:id="@+id/action_leaderboard_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <!-- Profile Screen (Profile Tab) -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.debugappproject.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile_to_settings"
            app:destination="@id/settingsFragment" />

        <action
            android:id="@+id/action_profile_to_premium"
            app:destination="@id/premiumFragment" />

        <action
            android:id="@+id/action_profile_to_subscription"
            app:destination="@id/proSubscriptionFragment" />
    </fragment>

    <!-- ============================================== -->
    <!-- SECONDARY DESTINATIONS                        -->
    <!-- ============================================== -->

    <!-- Pro Subscription Screen -->
    <fragment
        android:id="@+id/proSubscriptionFragment"
        android:name="com.example.debugappproject.ui.subscription.ProSubscriptionFragment"
        android:label="Go Pro"
        tools:layout="@layout/fragment_pro_subscription" />

    <!-- Premium/Subscription Screen (legacy) -->
    <fragment
        android:id="@+id/premiumFragment"
        android:name="com.example.debugappproject.ui.premium.PremiumFragment"
        android:label="Go Pro"
        tools:layout="@layout/fragment_premium" />

    <!-- Practice Mode Screen -->
    <fragment
        android:id="@+id/practiceFragment"
        android:name="com.example.debugappproject.ui.practice.PracticeFragment"
        android:label="Practice Mode"
        tools:layout="@layout/fragment_practice">

        <action
            android:id="@+id/action_practice_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Battle Arena Screen -->
    <fragment
        android:id="@+id/battleArenaFragment"
        android:name="com.example.debugappproject.ui.battle.BattleArenaFragment"
        android:label="Battle Arena"
        tools:layout="@layout/fragment_battle_arena" />

    <!-- Bug of the Day Screen -->
    <fragment
        android:id="@+id/bugOfTheDayFragment"
        android:name="com.example.debugappproject.ui.bugofday.BugOfTheDayFragment"
        android:label="Bug of the Day"
        tools:layout="@layout/fragment_bug_of_day">

        <action
            android:id="@+id/action_bugOfDay_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Settings Screen -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.debugappproject.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- Path Detail Screen -->
    <fragment
        android:id="@+id/pathDetailFragment"
        android:name="com.example.debugappproject.ui.learn.PathDetailFragment"
        android:label="Path Details"
        tools:layout="@layout/fragment_path_detail">

        <argument
            android:name="pathId"
            app:argType="integer"
            android:defaultValue="1" />

        <action
            android:id="@+id/action_pathDetail_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Bug Detail Screen -->
    <fragment
        android:id="@+id/bugDetailFragment"
        android:name="com.example.debugappproject.ui.bugdetail.BugDetailFragment"
        android:label="Bug Details"
        tools:layout="@layout/fragment_bug_detail">

        <argument
            android:name="bugId"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>

    <!-- Bug List Screen -->
    <fragment
        android:id="@+id/bugListFragment"
        android:name="com.example.debugappproject.ui.buglist.BugListFragment"
        android:label="All Bugs"
        tools:layout="@layout/fragment_bug_list">

        <action
            android:id="@+id/action_bugList_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Progress Screen -->
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.example.debugappproject.ui.progress.ProgressFragment"
        android:label="My Progress"
        tools:layout="@layout/fragment_progress" />

</navigation>
