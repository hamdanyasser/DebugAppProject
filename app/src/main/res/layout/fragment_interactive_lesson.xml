<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/button_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_circle"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_lesson_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interactive Lesson"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_step_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step 1 of 5"
                        android:textColor="#8A8AA0"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_lesson"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginHorizontal="16dp"
                android:max="5"
                android:progress="1"
                android:progressDrawable="@drawable/progress_lesson_gradient" />

            <!-- Content Area -->
            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Mascot Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Mascot Image -->
                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_mascot_circle">

                        <ImageView
                            android:id="@+id/image_mascot"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bug_mascot"
                            android:contentDescription="Bug mascot" />
                    </FrameLayout>

                    <!-- Speech Bubble -->
                    <LinearLayout
                        android:id="@+id/layout_mascot_bubble"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_speech_bubble"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_mascot_speech"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome to debugging!"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:lineSpacingMultiplier="1.3" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Code Editor Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_code_editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardBackgroundColor="#1E1E2E"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#3D3D54"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Code Editor Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#2D2D44"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_dot_red" />

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/bg_dot_yellow" />

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/bg_dot_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="code.java"
                                android:textColor="#8A8AA0"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Code Input -->
                        <EditText
                            android:id="@+id/edit_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="monospace"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:minHeight="120dp"
                            android:padding="16dp"
                            android:textColor="#E0E0E0"
                            android:textSize="14sp"
                            android:hint="Type your code here..."
                            android:textColorHint="#5A5A70" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Expected Output (for hints) -->
                <TextView
                    android:id="@+id/text_expected_output"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#8A8AA0"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <!-- Feedback Area -->
                <LinearLayout
                    android:id="@+id/layout_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_feedback_correct"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_hint"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:text="ðŸ’¡ Hint"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        app:backgroundTint="#2D2D44"
                        app:cornerRadius="12dp"
                        app:strokeColor="#3D3D54"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_skip"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:text="Skip â†’"
                        android:textColor="#8A8AA0"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        app:backgroundTint="#1A1A2E"
                        app:cornerRadius="12dp"
                        app:strokeColor="#2D2D44"
                        app:strokeWidth="1dp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_check_answer"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="âœ“ Check Answer"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:backgroundTint="#7C4DFF"
                    app:cornerRadius="16dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Confetti Container (overlay) -->
    <FrameLayout
        android:id="@+id/confetti_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false" />

    <!-- XP Reward Overlay -->
    <FrameLayout
        android:id="@+id/xp_reward_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_xp_reward_overlay"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_xp_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+25 XP"
            android:textColor="#FFD54F"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowRadius="4" />
    </FrameLayout>

</FrameLayout>
