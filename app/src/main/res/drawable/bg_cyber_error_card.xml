<?xml version="1.0" encoding="utf-8"?>
<!-- ═══════════════════════════════════════════════════════════════════════════
     DEBUGMASTER - CYBER ERROR CARD
     Red neon glow for error states
     ═══════════════════════════════════════════════════════════════════════════ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#30EF4444"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    
    <!-- Main card -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#EF4444"
                android:centerColor="#DC2626"
                android:endColor="#B91C1C"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#40EF4444"/>
        </shape>
    </item>
    
    <!-- Inner shine -->
    <item android:bottom="60dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
        </shape>
    </item>
</layer-list>
