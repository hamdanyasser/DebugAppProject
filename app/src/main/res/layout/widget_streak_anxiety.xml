<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardStreakWidget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Streak Fire -->
            <TextView
                android:id="@+id/textStreakIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥"
                android:textSize="32sp" />

            <!-- Streak Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textStreakCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textSize="36sp"
                    android:textColor="#FF6B35"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAY STREAK"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <!-- Status Badge -->
            <LinearLayout
                android:id="@+id/layoutStreakStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/textStreakStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ… SAFE"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTimeRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resets in 6h 23m"
                    android:textSize="11sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Bar (to next milestone) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next: ðŸŒŸ 2 Week Warrior"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/textMilestoneProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/14"
                    android:textSize="12sp"
                    android:textColor="#FFD700" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressMilestone"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_streak" />
        </LinearLayout>

        <!-- Urgency Message (when at risk) -->
        <TextView
            android:id="@+id/textStreakUrgency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="âš ï¸ Play now to keep your streak alive!"
            android:textSize="13sp"
            android:textColor="#FF5722"
            android:visibility="gone" />

        <!-- Play Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPlayToday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="âš”ï¸ PLAY TODAY'S CHALLENGE"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#6C5CE7"
            app:cornerRadius="24dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
