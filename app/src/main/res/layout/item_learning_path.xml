<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/dm_surface"
    app:cardCornerRadius="@dimen/dm_radius_md"
    app:cardElevation="0dp"
    app:strokeColor="@color/dm_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left: Icon -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_path_icon">

            <TextView
                android:id="@+id/text_path_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ›"
                android:textSize="28sp" />
        </FrameLayout>

        <!-- Middle: Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title Row with Badges -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_path_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Loading..."
                    android:textColor="@color/dm_text_primary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- NEW Badge -->
                <TextView
                    android:id="@+id/badge_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_badge_new"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="NEW"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:fontFamily="sans-serif-bold"
                    android:visibility="gone" />

                <!-- PRO Badge -->
                <TextView
                    android:id="@+id/badge_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_badge_pro"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="ðŸ‘‘ PRO"
                    android:textColor="@color/dm_streak"
                    android:textSize="8sp"
                    android:fontFamily="sans-serif-bold"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/text_path_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/dm_text_secondary"
                android:textSize="12sp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_path"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_path_premium" />

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_lessons_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 lessons"
                    android:textColor="@color/dm_text_tertiary"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="â€¢"
                    android:textColor="@color/dm_text_disabled"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/text_time_estimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:textColor="@color/dm_text_tertiary"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="â€¢"
                    android:textColor="@color/dm_text_disabled"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/text_xp_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 XP"
                    android:textColor="@color/dm_xp"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
            
            <!-- Hidden fields for compatibility -->
            <TextView
                android:id="@+id/text_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Right: Progress % and Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_path_progress_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/dm_primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_continue_path"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:minWidth="80dp"
                android:text="Start"
                android:textColor="@color/dm_text_inverse"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:backgroundTint="@color/dm_primary"
                app:cornerRadius="10dp"
                app:elevation="0dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
