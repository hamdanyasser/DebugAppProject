<?xml version="1.0" encoding="utf-8"?>
<!--
    Game Mode Card V2 - Premium Reusable card for game modes
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    app:strokeColor="#407C4DFF"
    app:strokeWidth="1dp"
    app:rippleColor="#7C4DFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_game_mode_card_v2">

        <!-- Accent Line at Top - Gradient -->
        <View
            android:id="@+id/accent_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_gradient_accent_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="18dp">

            <!-- Mode Icon - PREMIUM V2 -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_game_mode_icon_v2">

                <TextView
                    android:id="@+id/text_mode_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    tools:text="ðŸŽ¯" />
            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title Row with Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_mode_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="Quick Fix" />

                    <TextView
                        android:id="@+id/badge_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_badge_free"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="FREE"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/text_mode_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:alpha="0.8"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Fix bugs in under 60 seconds! Race against the clock." />
            </LinearLayout>

            <!-- Arrow with glow effect -->
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_stats_glass_v2">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#7C4DFF"
                    android:contentDescription="Play" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
