<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A">

    <!-- Background Particles Container -->
    <FrameLayout
        android:id="@+id/particles_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_onboarding_gradient" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Animated Bug Container -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp">

            <!-- Glow Ring -->
            <View
                android:id="@+id/glow_ring"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_glow_ring" />

            <!-- Bug Icon Container -->
            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_icon_circle">

                <TextView
                    android:id="@+id/text_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ›"
                    android:textSize="56sp" />
            </FrameLayout>
        </FrameLayout>

        <!-- Title with Gradient Effect -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Fix Real Bugs"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="in 15+ Languages"
            android:textColor="#7C4DFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alpha="0.8"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:text="Master debugging by fixing real code challenges in Java, Python, JavaScript, Kotlin, and more!"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Feature Pills -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_feature_pill"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="ðŸ”¥ 100+ Challenges"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_feature_pill"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="âš¡ All Skill Levels"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
