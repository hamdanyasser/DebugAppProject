<?xml version="1.0" encoding="utf-8"?>
<!-- Lesson 1: What is a Bug? - Informational with animated bug icon -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A"
    android:fillViewport="true"
    android:scrollbars="none"
    android:paddingTop="100dp"
    android:paddingBottom="160dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Animated Bug Icon Container -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp">

            <!-- Glow Ring (animated) -->
            <View
                android:id="@+id/glow_ring"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_glow_ring" />

            <!-- Icon Circle -->
            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_icon_circle">

                <TextView
                    android:id="@+id/text_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="&#x1F41B;"
                    android:textSize="56sp" />
            </FrameLayout>
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="What is a Bug?"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Welcome to Debugging!"
            android:textColor="#B8B8D0"
            android:textSize="16sp" />

        <!-- Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardCornerRadius="20dp"
            app:strokeColor="#7C4DFF"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textColor="#E8E8F0"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Fun Fact Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1A2D3D"
            app:cardCornerRadius="16dp"
            app:strokeColor="#00BCD4"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#x1F4A1;"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/text_fun_fact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="The term &quot;bug&quot; comes from 1947 when a real moth was found stuck in a computer!"
                    android:textColor="#B8D0D8"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
