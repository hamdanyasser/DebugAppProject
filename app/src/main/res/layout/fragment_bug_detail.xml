<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bug Header -->
        <TextView
            android:id="@+id/text_bug_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bug Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_bug_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="â€¢" />

            <TextView
                android:id="@+id/text_bug_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loops" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/description"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/text_bug_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description text"
            android:textSize="14sp" />

        <!-- Broken Code -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/broken_code"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/text_broken_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#F5F5F5"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:text="Code here"
            android:textSize="12sp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/button_run_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/run_code"
                style="@style/Widget.Material3.Button.TonalButton" />

            <Button
                android:id="@+id/button_show_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/show_hint"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        <!-- Output Section -->
        <LinearLayout
            android:id="@+id/layout_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/output"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/text_expected_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#E8F5E9"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:text="Expected Output"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_actual_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFEBEE"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:text="Actual Output"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Hints Section -->
        <LinearLayout
            android:id="@+id/layout_hints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hints"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/text_hints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFF9C4"
                android:padding="12dp"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Solution Section -->
        <LinearLayout
            android:id="@+id/layout_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/solution"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/explanation"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Explanation"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/fixed_code"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_fixed_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#E8F5E9"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:text="Fixed code"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Bottom Actions -->
        <Button
            android:id="@+id/button_show_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/show_solution"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/button_mark_solved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/mark_as_solved" />

    </LinearLayout>
</ScrollView>
