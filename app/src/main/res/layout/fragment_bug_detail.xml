<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Bug Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/text_bug_title"
                    style="@style/TextAppearance.DebugMaster.Headline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Off-by-One Error in Array Loop" />

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/difficulty_easy"
                        app:chipCornerRadius="@dimen/chip_corner_radius"
                        style="@style/Widget.Material3.Chip.Assist"
                        tools:text="Easy" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="?attr/colorSurfaceVariant"
                        app:chipCornerRadius="@dimen/chip_corner_radius"
                        style="@style/Widget.Material3.Chip.Assist"
                        tools:text="Loops" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed âœ“"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:chipBackgroundColor="@color/completed_indicator"
                        app:chipCornerRadius="@dimen/chip_corner_radius"
                        style="@style/Widget.Material3.Chip.Assist"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Description Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/text_bug_description"
                    style="@style/TextAppearance.DebugMaster.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    tools:text="This bug demonstrates a common off-by-one error..." />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Broken Code Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/broken_code"
                    android:textColor="?attr/colorError" />

                <TextView
                    android:id="@+id/text_broken_code"
                    style="@style/CodeBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    tools:text="for (int i = 0; i &lt;= arr.length; i++) { ... }" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Your Fix Editor Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="@color/code_editor_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Fix"
                    android:textColor="?attr/colorPrimary" />

                <EditText
                    android:id="@+id/edit_user_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:minHeight="150dp"
                    android:gravity="top|start"
                    android:padding="@dimen/padding_small"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:fontFamily="monospace"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:hint="Enter your fixed code here..."
                    android:importantForAutofill="no"
                    tools:ignore="HardcodedText,LabelFor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_check_fix"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:text="Run Tests"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="start"
                        app:cornerRadius="@dimen/button_corner_radius"
                        style="@style/Widget.Material3.Button"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_reset_code"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:text="Reset Code"
                        app:icon="@android:drawable/ic_menu_revert"
                        app:iconGravity="start"
                        app:cornerRadius="@dimen/button_corner_radius"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Results Card (initially hidden) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_test_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/text_test_result_title"
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Results"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/text_test_result_message"
                    style="@style/TextAppearance.DebugMaster.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    tools:text="All tests passed! ðŸŽ‰" />

                <LinearLayout
                    android:id="@+id/layout_test_cases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_run_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_small"
                android:text="@string/run_code"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="start"
                app:cornerRadius="@dimen/button_corner_radius"
                style="@style/Widget.Material3.Button.TonalButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_show_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_small"
                android:text="@string/show_hint"
                app:icon="@android:drawable/ic_dialog_info"
                app:iconGravity="start"
                app:cornerRadius="@dimen/button_corner_radius"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        <!-- Output Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/output"
                    android:textColor="?attr/colorPrimary" />

                <!-- Expected Output -->
                <TextView
                    style="@style/TextAppearance.DebugMaster.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="Expected Output:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_expected_output"
                    style="@style/CodeBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@color/success_background"
                    tools:text="[0, 1, 2, 3, 4]" />

                <!-- Actual Output -->
                <TextView
                    style="@style/TextAppearance.DebugMaster.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="Actual Output (with bug):"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_actual_output"
                    style="@style/CodeBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@color/error_background"
                    tools:text="ArrayIndexOutOfBoundsException" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hints Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="@color/hint_background"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hints"
                    android:textColor="?attr/colorPrimary" />

                <LinearLayout
                    android:id="@+id/layout_hints_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:orientation="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Solution Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="@color/success_background"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solution"
                    android:textColor="?attr/colorSecondary" />

                <TextView
                    style="@style/TextAppearance.DebugMaster.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/explanation"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_explanation"
                    style="@style/TextAppearance.DebugMaster.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    tools:text="The loop condition should use &lt; instead of &lt;=..." />

                <TextView
                    style="@style/TextAppearance.DebugMaster.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="@string/fixed_code"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_fixed_code"
                    style="@style/CodeBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    tools:text="for (int i = 0; i &lt; arr.length; i++) { ... }" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- User Notes Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    style="@style/TextAppearance.DebugMaster.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Notes"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    style="@style/TextAppearance.DebugMaster.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Save your thoughts and observations about this bug"
                    android:alpha="0.7" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:hint="Type your notes here..."
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_user_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="10" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="Save Notes"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="start"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_show_solution"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/show_solution"
            app:icon="@android:drawable/ic_menu_help"
            app:iconGravity="start"
            app:cornerRadius="@dimen/button_corner_radius"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mark_solved"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/mark_as_solved"
            app:icon="@android:drawable/checkbox_on_background"
            app:iconGravity="start"
            app:cornerRadius="@dimen/button_corner_radius" />

    </LinearLayout>
</ScrollView>
