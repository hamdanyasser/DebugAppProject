<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - CYBER BUG LIST SCREEN -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_main"
    android:padding="@dimen/padding_medium">

    <!-- Header -->
    <TextView
        android:id="@+id/text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ› All Bugs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:hint="Search bugs..."
        app:hintTextColor="@color/cyber_neon_blue"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="@color/cyber_neon_purple"
        app:endIconMode="clear_text"
        app:endIconTint="@color/cyber_neon_pink"
        app:boxStrokeColor="@color/cyber_neon_purple"
        app:boxBackgroundColor="@color/cyber_surface"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_header">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/white"
            android:imeOptions="actionSearch" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Filters Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="1dp"
        app:strokeColor="@color/cyber_glow_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_cyber_card"
            android:padding="@dimen/padding_medium">

            <!-- Filters Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Filters"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/cyber_neon_purple" />

            <!-- Difficulty Filter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="Difficulty"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/cyber_neon_blue" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                app:singleLine="false"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all_difficulty"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/white"
                    android:checked="true"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_purple"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_difficulty_easy"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŸ¢ Easy"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_green"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_difficulty_medium"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŸ¡ Medium"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_gold"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_difficulty_hard"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”´ Hard"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_pink"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Category Filter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="Category"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/cyber_neon_blue" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                app:singleLine="false"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all_category"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/white"
                    android:checked="true"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_purple"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_loops"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”„ Loops"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_arrays"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Arrays"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_oop"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ï¸ OOP"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_strings"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Strings"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_conditionals"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â“ Conditionals"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_exceptions"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Exceptions"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_collections"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Collections"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_category_methods"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Methods"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/cyber_surface"
                    app:chipStrokeColor="@color/cyber_neon_blue"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="@dimen/chip_corner_radius" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_bugs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_filters"
        tools:listitem="@layout/item_bug" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_filters"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:textSize="48sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="No bugs found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Try adjusting your filters"
            android:textSize="14sp"
            android:textColor="@color/cyber_neon_blue"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
