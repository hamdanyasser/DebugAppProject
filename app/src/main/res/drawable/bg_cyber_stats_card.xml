<?xml version="1.0" encoding="utf-8"?>
<!-- ═══════════════════════════════════════════════════════════════════════════
     DEBUGMASTER - CYBER STATS CARD
     Purple/pink gradient for stats display
     ═══════════════════════════════════════════════════════════════════════════ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#308B5CF6"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
    <!-- Main card -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#252540"
                android:centerColor="#1E1E35"
                android:endColor="#1A1A2E"
                android:type="linear"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#408B5CF6"/>
        </shape>
    </item>
    
    <!-- Subtle accent glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10EC4899"
                android:centerColor="#00000000"
                android:endColor="#106366F1"
                android:type="linear"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
