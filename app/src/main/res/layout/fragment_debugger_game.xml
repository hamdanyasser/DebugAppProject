<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_cyber_main">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1A1A2E"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ðŸ” Interactive Debugger"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1"
            android:textColor="#10B981"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_glass_pill"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/text_xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 0 XP"
            android:textColor="#FFD700"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Challenge Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_glass_dark"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_challenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Challenge Title"
            android:textColor="#FFD700"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŸ¡ Medium"
            android:textColor="#94A3B8"
            android:textSize="12sp"
            android:background="@drawable/bg_glass_pill"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Code Editor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:cardBackgroundColor="#0F0F1A"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Editor Tab Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#1E1E2E"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’»"
                        android:textSize="14sp" />
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="main.java"
                        android:textColor="#A78BFA"
                        android:textSize="12sp"
                        android:fontFamily="monospace" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘† Tap buggy line"
                        android:textColor="#64748B"
                        android:textSize="10sp"
                        android:background="@drawable/bg_glass_pill"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:id="@+id/scroll_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/container_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:minWidth="500dp" />
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Variables Panel -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_variables"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#0F172A"
            app:cardCornerRadius="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Variables Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:background="#1E293B"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§ª"
                        android:textSize="14sp" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Variables"
                        android:textColor="#FFD700"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                        
                    <TextView
                        android:id="@+id/text_var_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="(3)"
                        android:textColor="#64748B"
                        android:textSize="11sp" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/container_variables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingBottom="8dp" />
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Console Output -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#0A0A0F"
            app:cardCornerRadius="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Console Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:background="#111827"
                    android:gravity="center_vertical">
                    
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_dot_red" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_dot_yellow" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_dot_green" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Console"
                        android:textColor="#10B981"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />
                        
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                        
                    <TextView
                        android:id="@+id/text_output_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â— Running"
                        android:textColor="#22C55E"
                        android:textSize="10sp" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/scroll_output"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/container_output"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            android:id="@+id/text_output"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:text="Console output will appear here..." />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Debug Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_glass_dark"
        android:elevation="8dp">

        <!-- Step Over Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_step_over"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="â­ï¸"
                android:textSize="22sp"
                app:backgroundTint="#3B82F6"
                app:cornerRadius="16dp"
                app:iconPadding="0dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Over"
                android:textColor="#94A3B8"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Step Into Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_step_into"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="â¬‡ï¸"
                android:textSize="22sp"
                app:backgroundTint="#8B5CF6"
                app:cornerRadius="16dp"
                app:iconPadding="0dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Into"
                android:textColor="#94A3B8"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Continue Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="â–¶ï¸"
                android:textSize="22sp"
                app:backgroundTint="#22C55E"
                app:cornerRadius="16dp"
                app:iconPadding="0dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Run"
                android:textColor="#94A3B8"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Find Bug Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_find_bug"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="ðŸ›"
                android:textSize="22sp"
                app:backgroundTint="#EF4444"
                app:cornerRadius="16dp"
                app:iconPadding="0dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Bug!"
                android:textColor="#F87171"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
