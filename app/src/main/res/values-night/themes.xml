<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- =======================================================================
         DEBUGMASTER - DARK THEME
         Premium Cyber Gaming Experience
         ======================================================================= -->

    <!-- Base application theme (Dark) -->
    <style name="Base.Theme.DebugAppProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/primary_light</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondaryContainer">@color/secondary_light</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/xp_gold_mid</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error_dark</item>
        <item name="colorErrorContainer">@color/error_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_dark_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>

        <!-- Outline -->
        <item name="colorOutline">@color/divider_dark</item>

        <!-- Status bar - Dark mode specific -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Ripple color -->
        <item name="android:colorControlHighlight">@color/primary_light</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="Theme.DebugAppProject" parent="Base.Theme.DebugAppProject" />

    <!-- =======================================================================
         DARK MODE TEXT APPEARANCES
         ======================================================================= -->
    
    <style name="TextAppearance.DebugMaster.Display" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.DebugMaster.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.SubtitleSmall" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.DebugMaster.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Code" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DebugMaster.XP" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/xp_gold_mid</item>
    </style>

    <style name="TextAppearance.DebugMaster.Streak" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/streak_orange</item>
    </style>

    <!-- =======================================================================
         DARK MODE CARD STYLES
         ======================================================================= -->
    
    <style name="Widget.DebugMaster.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.DebugMaster.CardView.Hero" parent="Widget.DebugMaster.CardView">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">16dp</item>
    </style>

    <style name="Widget.DebugMaster.CardView.Stats" parent="Widget.DebugMaster.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.DebugMaster.CardView.Path" parent="Widget.DebugMaster.CardView">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">12dp</item>
    </style>

    <style name="Widget.DebugMaster.CardView.Achievement" parent="Widget.DebugMaster.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Widget.DebugMaster.CardView.Glass" parent="Widget.DebugMaster.CardView">
        <item name="cardBackgroundColor">@color/glass_dark</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_border</item>
    </style>

    <!-- =======================================================================
         DARK MODE BOTTOM NAVIGATION
         ======================================================================= -->
    <style name="Widget.DebugMaster.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface_dark</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector_dark</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector_dark</item>
        <item name="android:elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- =======================================================================
         DARK MODE PROGRESS BARS
         ======================================================================= -->
    <style name="Widget.DebugMaster.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackThickness">12dp</item>
        <item name="trackCornerRadius">6dp</item>
        <item name="trackColor">@color/surface_dark_variant</item>
        <item name="indicatorColor">@color/primary</item>
    </style>

    <style name="Widget.DebugMaster.ProgressBar.XP" parent="Widget.DebugMaster.ProgressBar">
        <item name="indicatorColor">@color/xp_gold_mid</item>
    </style>

    <style name="Widget.DebugMaster.ProgressBar.Path" parent="Widget.DebugMaster.ProgressBar">
        <item name="trackThickness">8dp</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

    <!-- =======================================================================
         CODE BLOCK DARK MODE
         ======================================================================= -->
    <style name="CodeBlock" parent="">
        <item name="android:background">@color/code_background_dark</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
</resources>
