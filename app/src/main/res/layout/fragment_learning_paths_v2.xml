                    android:textColor="@color/dm_text_primary"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/text_empty_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
