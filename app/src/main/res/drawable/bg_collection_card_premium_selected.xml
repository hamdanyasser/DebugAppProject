<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - Premium Collection Card Selected State with Brilliant Golden Glow -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer brilliant glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <stroke android:width="4dp" android:color="#A0FFD700" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Main card with rich purple -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#3D2B5E"
                android:centerColor="#2E1850"
                android:endColor="#1A0A3F" />
            <stroke android:width="2dp" android:color="#FFD700" />
        </shape>
    </item>
    
    <!-- Inner golden sparkle -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" />
            <stroke android:width="1dp" android:color="#60F59E0B" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
</layer-list>
