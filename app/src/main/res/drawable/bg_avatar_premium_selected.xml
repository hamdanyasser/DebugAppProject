<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - Premium Avatar Item (Selected State) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Glow Effect -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#60FFD700"
                android:endColor="#00FFD700" />
        </shape>
    </item>
    
    <!-- Main Circle -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#2D1B69" />
            <stroke
                android:width="3dp"
                android:color="#FFD700" />
        </shape>
    </item>
    
</layer-list>
