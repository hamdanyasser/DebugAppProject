<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - Premium Title Selector Dialog with Amazing UI/UX -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_cyber_card"
    android:padding="20dp">

    <!-- Header with Trophy Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Titles"
                android:textColor="#FFD700"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show off your achievements"
                android:textColor="#A78BFA"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_cyber_button_small"
            android:src="@drawable/ic_close"
            android:padding="8dp"
            android:contentDescription="Close"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Decorative Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bg_gradient_divider"
        android:layout_marginBottom="16dp" />

    <!-- Title List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_premium_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- No Title Option -->
    <LinearLayout
        android:id="@+id/container_no_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_item_default"
        android:padding="14dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš«"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="No Title"
            android:textColor="#9CA3AF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/check_no_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“"
            android:textColor="#4ADE80"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
