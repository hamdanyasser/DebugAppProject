<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F172A">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#1E293B">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:contentDescription="Back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– AI Mentor"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bug_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No bug selected"
                android:textColor="#94A3B8"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/hint_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hints: 0/5"
            android:textColor="#FBBF24"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="@drawable/bg_hint_badge" />

    </LinearLayout>

    <!-- Chat Messages -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />

    </ScrollView>

    <!-- Typing Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        android:id="@+id/typing_container">

        <ProgressBar
            android:id="@+id/typing_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI is thinking..."
            android:textColor="#94A3B8"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Quick Actions -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#1E293B"
        android:paddingVertical="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/quick_actions_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:singleLine="true" />

    </HorizontalScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#1E293B">

        <EditText
            android:id="@+id/input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask the AI Mentor..."
            android:textColor="@android:color/white"
            android:textColorHint="#64748B"
            android:background="@drawable/bg_input_field"
            android:padding="12dp"
            android:maxLines="3"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_send_button"
            android:src="@drawable/ic_send"
            app:tint="@android:color/white"
            android:enabled="false"
            android:contentDescription="Send" />

    </LinearLayout>

</LinearLayout>
