<?xml version="1.0" encoding="utf-8"?>
<!-- CYBER NEON BUTTON - Primary Action -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow/Glow layer -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#406366F1" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Main button -->
    <item android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#6366F1"
                android:centerColor="#7C3AED"
                android:endColor="#8B5CF6"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Top highlight -->
    <item android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:centerColor="#15FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Neon edge -->
    <item android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#50A78BFA" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
</layer-list>
