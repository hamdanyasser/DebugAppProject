<?xml version="1.0" encoding="utf-8"?>
<!-- ═══════════════════════════════════════════════════════════════════════════
     DEBUGMASTER - CYBER SUCCESS CARD
     Green neon glow for success states
     ═══════════════════════════════════════════════════════════════════════════ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#3022C55E"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    
    <!-- Main card -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#10B981"
                android:centerColor="#059669"
                android:endColor="#047857"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#4022C55E"/>
        </shape>
    </item>
    
    <!-- Inner shine -->
    <item android:bottom="60dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
        </shape>
    </item>
</layer-list>
