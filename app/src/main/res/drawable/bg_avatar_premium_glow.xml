<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - Premium Avatar Glow Effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer Glow Ring -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#FFD700" />
            <gradient
                android:type="radial"
                android:gradientRadius="32dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#40FFD700"
                android:endColor="#00FFD700" />
        </shape>
    </item>
    
    <!-- Inner Shimmer Ring -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FFA500" />
        </shape>
    </item>
    
</layer-list>
