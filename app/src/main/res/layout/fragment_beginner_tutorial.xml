<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_cyber_main">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#1A1A2E">

        <!-- Close Button -->
        <TextView
            android:id="@+id/button_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="âœ•"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/bg_circle_button" />

        <!-- Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ“ Beginner Tutorial"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_lesson_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 1 of 14"
                android:textColor="#B8B8D0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progress_lesson"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:max="14"
            android:progress="1"
            android:progressTint="#10B981"
            android:progressBackgroundTint="#3D3D54" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Lesson Title -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ› What is a Bug?"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Welcome to Debugging!"
                android:textColor="#B8B8D0"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Content Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#7C4DFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Main Content -->
                    <TextView
                        android:id="@+id/text_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lesson content goes here..."
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />

                    <!-- Code Example -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="#0D0D1A"
                        android:padding="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_code_example"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:text="// Code example"
                            android:textColor="#10B981"
                            android:textSize="13sp"
                            android:lineSpacingExtra="4dp" />
                    </HorizontalScrollView>

                    <!-- Quiz Options Container -->
                    <LinearLayout
                        android:id="@+id/layout_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tips Box (shown on some lessons) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#1A3D1A"
                app:cardCornerRadius="12dp"
                app:strokeColor="#10B981"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_tips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Pro tip text..."
                        android:textColor="#B8D0B8"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Buttons - Always visible -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1A1A2E"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_back"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="â† Back"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:visibility="invisible"
            app:cornerRadius="24dp"
            app:strokeColor="#7C4DFF"
            app:strokeWidth="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="140dp"
            android:text="Next â†’"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:backgroundTint="#7C4DFF"
            app:cornerRadius="24dp" />
    </LinearLayout>

</LinearLayout>
