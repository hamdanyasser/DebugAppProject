<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="100dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_circle"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="ðŸŽ® Game Modes"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.7"
            android:text="Choose your way to master debugging!"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- Section: Quick Play -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="âš¡ QUICK PLAY"
            android:textColor="#7C4DFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Quick Fix Mode Card -->
        <include
            android:id="@+id/card_quick_fix"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Battle Arena Card -->
        <include
            android:id="@+id/card_battle_arena"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Section: Challenge Modes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ðŸ† CHALLENGE MODES"
            android:textColor="#F59E0B"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Speed Run Card -->
        <include
            android:id="@+id/card_speed_run"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Puzzle Mode Card -->
        <include
            android:id="@+id/card_puzzle_mode"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Daily Challenge Card -->
        <include
            android:id="@+id/card_daily_challenge"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Section: Learning -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ðŸ“š LEARNING"
            android:textColor="#06B6D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Tutorial Mode Card -->
        <include
            android:id="@+id/card_tutorial_mode"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Section: Special -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="âœ¨ SPECIAL"
            android:textColor="#EC4899"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Mystery Bug Card -->
        <include
            android:id="@+id/card_mystery_bug"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Co-op Mode Card -->
        <include
            android:id="@+id/card_coop_mode"
            layout="@layout/item_game_mode_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
