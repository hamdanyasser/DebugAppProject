<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.debugappproject.ui.splash.SplashFragment"
        android:label="DebugMaster"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_learn"
            app:destination="@id/learningPathsFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Bottom Nav Destinations -->

    <!-- Learning Paths Screen (Learn Tab) -->
    <fragment
        android:id="@+id/learningPathsFragment"
        android:name="com.example.debugappproject.ui.learn.LearningPathsFragment"
        android:label="Learn"
        tools:layout="@layout/fragment_learning_paths">

        <action
            android:id="@+id/action_paths_to_pathDetail"
            app:destination="@id/pathDetailFragment" />

        <action
            android:id="@+id/action_paths_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Bug of the Day Screen -->
    <fragment
        android:id="@+id/bugOfTheDayFragment"
        android:name="com.example.debugappproject.ui.bugofday.BugOfTheDayFragment"
        android:label="Bug of the Day"
        tools:layout="@layout/fragment_bug_of_day">

        <action
            android:id="@+id/action_bugOfDay_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Profile Screen -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.debugappproject.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- Settings Screen -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.debugappproject.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- Secondary Destinations -->

    <!-- Path Detail Screen -->
    <fragment
        android:id="@+id/pathDetailFragment"
        android:name="com.example.debugappproject.ui.learn.PathDetailFragment"
        android:label="Path Details"
        tools:layout="@layout/fragment_path_detail">

        <argument
            android:name="pathId"
            app:argType="integer"
            android:defaultValue="1" />

        <action
            android:id="@+id/action_pathDetail_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Bug Detail Screen (Enhanced) -->
    <fragment
        android:id="@+id/bugDetailFragment"
        android:name="com.example.debugappproject.ui.bugdetail.BugDetailFragment"
        android:label="Bug Details"
        tools:layout="@layout/fragment_bug_detail">

        <argument
            android:name="bugId"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>

    <!-- Legacy Screens (kept for compatibility) -->

    <!-- Home/Dashboard Screen (Legacy) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.debugappproject.ui.home.HomeFragment"
        android:label="DebugMaster"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_bugList"
            app:destination="@id/bugListFragment" />

        <action
            android:id="@+id/action_home_to_bugDetail"
            app:destination="@id/bugDetailFragment" />

        <action
            android:id="@+id/action_home_to_progress"
            app:destination="@id/progressFragment" />
    </fragment>

    <!-- Bug List Screen (Legacy) -->
    <fragment
        android:id="@+id/bugListFragment"
        android:name="com.example.debugappproject.ui.buglist.BugListFragment"
        android:label="All Bugs"
        tools:layout="@layout/fragment_bug_list">

        <action
            android:id="@+id/action_bugList_to_bugDetail"
            app:destination="@id/bugDetailFragment" />
    </fragment>

    <!-- Progress Screen (Legacy) -->
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.example.debugappproject.ui.progress.ProgressFragment"
        android:label="My Progress"
        tools:layout="@layout/fragment_progress" />

</navigation>
