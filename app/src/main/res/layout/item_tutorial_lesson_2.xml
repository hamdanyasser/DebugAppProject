<?xml version="1.0" encoding="utf-8"?>
<!-- Lesson 2: Spot the Bug - Interactive code viewing -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A"
    android:fillViewport="true"
    android:scrollbars="none"
    android:paddingTop="100dp"
    android:paddingBottom="160dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Icon -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center">

            <View
                android:id="@+id/glow_ring"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_glow_ring_green" />

            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_icon_circle_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="&#x1F50D;"
                    android:textSize="36sp" />
            </FrameLayout>
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Spot the Bug!"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Can you find what's wrong with this code?"
            android:textColor="#B8B8D0"
            android:textSize="15sp"
            android:gravity="center" />

        <!-- Code Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardCornerRadius="16dp"
            app:strokeColor="#FF5252"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#x1F41B;"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Buggy Code"
                        android:textColor="#FF5252"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none">

                    <TextView
                        android:id="@+id/text_buggy_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_code_block"
                        android:fontFamily="monospace"
                        android:padding="16dp"
                        android:text="System.out.printIn(&quot;Hello World&quot;);"
                        android:textColor="#E8E8F0"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />
                </HorizontalScrollView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tap to Reveal Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reveal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="&#x1F441;  Tap to Reveal the Bug"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:backgroundTint="#3D3D54"
            app:cornerRadius="16dp" />

        <!-- Answer Card (Initially Hidden) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="#1A3D1A"
            app:cardCornerRadius="16dp"
            app:strokeColor="#10B981"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#x2705; Found it!"
                    android:textColor="#10B981"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_explanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#E8E8F0"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />

                <!-- Corrected Code -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="&#x2705; Correct Code:"
                    android:textColor="#10B981"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_correct_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_code_block_success"
                    android:fontFamily="monospace"
                    android:padding="12dp"
                    android:textColor="#10B981"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
