<?xml version="1.0" encoding="utf-8"?>
<!--
    PREMIUM GAME MODE ICON BACKGROUND V2
    Glowing circular icon container
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item android:bottom="-2dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#307C4DFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>

    <!-- Main background -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.4"
                android:gradientRadius="100%"
                android:startColor="#2A2A4A"
                android:endColor="#1A1A2E" />
            <stroke android:width="1dp" android:color="#407C4DFF" />
        </shape>
    </item>

    <!-- Top highlight -->
    <item android:top="3dp" android:left="6dp" android:right="6dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <size android:height="20dp" android:width="48dp" />
        </shape>
    </item>
</layer-list>
