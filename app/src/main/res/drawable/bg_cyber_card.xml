<?xml version="1.0" encoding="utf-8"?>
<!-- ═══════════════════════════════════════════════════════════════════════════
     DEBUGMASTER - CYBER CARD BACKGROUND
     Premium card surface with subtle neon glow effect
     ═══════════════════════════════════════════════════════════════════════════ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow / shadow -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#20A78BFA"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    
    <!-- Main card background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1A1A2E"
                android:centerColor="#252540"
                android:endColor="#1E1E35"
                android:type="linear"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#30A78BFA"/>
        </shape>
    </item>
    
    <!-- Top shine effect -->
    <item android:bottom="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
        </shape>
    </item>
</layer-list>
