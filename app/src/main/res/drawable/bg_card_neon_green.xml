<?xml version="1.0" encoding="utf-8"?>
<!--
    NEON GREEN CARD - For Practice Mode
    Glowing neon effect with green theme
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow ring -->
    <item android:bottom="-2dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#00E676" />
        </shape>
    </item>

    <!-- Card background with gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:type="linear"
                android:startColor="#0D1F1A"
                android:centerColor="#102820"
                android:endColor="#0D1F1A"
                android:angle="135" />
        </shape>
    </item>

    <!-- Inner highlight -->
    <item android:top="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp" />
            <gradient
                android:type="linear"
                android:startColor="#2000E676"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <size android:height="50dp" />
        </shape>
    </item>
</layer-list>
