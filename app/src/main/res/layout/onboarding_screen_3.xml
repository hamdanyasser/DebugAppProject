<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A">

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_onboarding_gradient_gold" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Animated Icon Container -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp">

            <!-- Glow Ring -->
            <View
                android:id="@+id/glow_ring"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_glow_ring_gold" />

            <!-- Icon Container -->
            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_icon_circle_gold">

                <TextView
                    android:id="@+id/text_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ†"
                    android:textSize="56sp" />
            </FrameLayout>
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Level Up &amp; Compete"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="60+ Achievements"
            android:textColor="#F59E0B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alpha="0.8"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:text="Earn XP, unlock achievements, climb the leaderboard, and join leagues from Bronze to Legend!"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- League Pills -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_league_bronze"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="ðŸ¥‰ Bronze"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_league_silver"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="ðŸ¥ˆ Silver"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_league_gold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="ðŸ¥‡ Gold"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_league_diamond"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="ðŸ’Ž Diamond"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_league_legend"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="ðŸ‘‘ Legend"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
