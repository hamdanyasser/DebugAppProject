<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - Free Collection Card Selected State -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Bright cyan glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <stroke android:width="3dp" android:color="#8006B6D4" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Main card -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1A2A3E"
                android:centerColor="#0E1830"
                android:endColor="#12182F" />
            <stroke android:width="2dp" android:color="#06B6D4" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <stroke android:width="1dp" android:color="#4006B6D4" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
</layer-list>
