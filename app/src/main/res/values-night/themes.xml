<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Dark) -->
    <style name="Base.Theme.DebugAppProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Material components -->
        <item name="materialCardViewStyle">@style/Widget.DebugMaster.CardView</item>
        <item name="materialButtonStyle">@style/Widget.DebugMaster.Button</item>
        <item name="chipStyle">@style/Widget.DebugMaster.Chip</item>
    </style>

    <!-- Override Code Block for dark theme -->
    <style name="CodeBlock">
        <item name="android:background">@color/code_background_dark</item>
        <item name="android:padding">@dimen/code_padding</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/code_text_size</item>
        <item name="android:scrollbars">vertical|horizontal</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <!-- Override Text Appearances for dark theme -->
    <style name="TextAppearance.DebugMaster.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <style name="TextAppearance.DebugMaster.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="TextAppearance.DebugMaster.Code" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/code_text_size</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>
</resources>
