<?xml version="1.0" encoding="utf-8"?>
<!--
    Game Mode Card - Reusable card for game modes
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#1A1A2E"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#2D2D44"
    app:strokeWidth="1dp"
    app:rippleColor="#7C4DFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Accent Line at Top -->
        <View
            android:id="@+id/accent_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#7C4DFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Mode Icon -->
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_game_mode_icon">

                <TextView
                    android:id="@+id/text_mode_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="28sp"
                    tools:text="ðŸŽ¯" />
            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title Row with Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_mode_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Quick Fix" />

                    <TextView
                        android:id="@+id/badge_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_badge_free"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="FREE"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/text_mode_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.7"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Fix bugs in under 60 seconds! Race against the clock." />
            </LinearLayout>

            <!-- Arrow -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:alpha="0.5"
                app:tint="@color/white"
                android:contentDescription="Play" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
