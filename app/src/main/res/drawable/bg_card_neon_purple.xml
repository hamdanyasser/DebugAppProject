<?xml version="1.0" encoding="utf-8"?>
<!--
    NEON PURPLE CARD - For Game Modes
    Glowing neon effect with purple/pink theme
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow ring -->
    <item android:bottom="-2dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#7C4DFF" />
        </shape>
    </item>

    <!-- Card background with gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:type="linear"
                android:startColor="#1A1A2E"
                android:centerColor="#1E1E38"
                android:endColor="#1A1A2E"
                android:angle="135" />
        </shape>
    </item>

    <!-- Inner highlight -->
    <item android:top="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp" />
            <gradient
                android:type="linear"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <size android:height="60dp" />
        </shape>
    </item>
</layer-list>
