<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A">

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_onboarding_gradient_final" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Animated Mascot Container -->
        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="180dp">

            <!-- Multiple Glow Rings -->
            <View
                android:id="@+id/glow_ring_outer"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_glow_ring_final_outer" />

            <View
                android:id="@+id/glow_ring"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_glow_ring_final" />

            <!-- Mascot Container -->
            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_onboarding_icon_circle_final">

                <TextView
                    android:id="@+id/text_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸš€"
                    android:textSize="56sp" />
            </FrameLayout>
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Ready to Debug?"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your Journey Starts Now!"
            android:textColor="#EC4899"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alpha="0.8"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:text="Join thousands of developers improving their debugging skills every day. Free to start, easy to master!"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Benefits List -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ…  4 FREE learning paths"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="âœ…  Daily challenges with rewards"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="âœ…  Battle mode against AI"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="âœ…  Suitable for ALL ages"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9" />
        </LinearLayout>

        <!-- Trust Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_trust_badge"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­â­â­â­â­"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Loved by 10K+ learners"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.9" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
