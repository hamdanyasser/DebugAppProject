<?xml version="1.0" encoding="utf-8"?>
<!-- Hero Section Gradient - Cyber Brand Gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#6366F1"
                android:centerColor="#8B5CF6"
                android:endColor="#EC4899" />
            <corners android:radius="@dimen/card_hero_corner_radius" />
        </shape>
    </item>
    
    <!-- Subtle overlay for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="100%"
                android:centerY="0%"
                android:startColor="#3006B6D4"
                android:endColor="#00000000" />
            <corners android:radius="@dimen/card_hero_corner_radius" />
        </shape>
    </item>
    
</layer-list>
