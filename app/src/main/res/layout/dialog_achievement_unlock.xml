<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardAchievement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="20dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_achievement"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Trophy Icon -->
        <TextView
            android:id="@+id/textAchievementIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            tools:text="ðŸ†" />

        <!-- Title -->
        <TextView
            android:id="@+id/textAchievementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Achievement Unlocked!"
            android:textColor="@color/xp_gold_mid"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Achievement Name -->
        <TextView
            android:id="@+id/textAchievementName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            tools:text="Bug Master" />

        <!-- XP Reward -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_xp_badge"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XP "
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textXpReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="+500 XP" />
        </LinearLayout>

        <!-- Tap to dismiss hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:alpha="0.6"
            android:text="Tap to dismiss"
            android:textColor="@color/text_secondary"
            android:textSize="11sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
