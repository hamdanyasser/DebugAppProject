<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ═══════════════════════════════════════════════════════════════════════
                         SPLASH SCREEN LETTER STYLES
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Base Splash Letter Style -->
    <style name="SplashLetter">
        <item name="android:alpha">0</item>
        <item name="android:translationY">20dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">38sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- White Letters (DEBUG) with drop shadow -->
    <style name="SplashLetter.White">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <!-- Pink Letters (MASTER) with glow shadow -->
    <style name="SplashLetter.Pink">
        <item name="android:textColor">#EC4899</item>
        <item name="android:shadowColor">#60EC4899</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">16</item>
    </style>

</resources>
