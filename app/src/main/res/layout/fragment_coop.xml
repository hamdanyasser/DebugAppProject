<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_cyber_main">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1A1A2E"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="ðŸ‘¥ Co-op Debug"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 0"
            android:textColor="#FF6B6B"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/text_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 0"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Menu Layout -->
    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥"
            android:textSize="72sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pair Programming"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Team up with an AI partner!\nSwitch roles like real pair programming."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3" />

        <!-- Quick Match Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_quick_match"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="28dp"
            android:text="âš¡ Quick Match"
            android:textSize="17sp"
            android:textAllCaps="false"
            app:backgroundTint="@color/accent_green"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_play"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="â€” or play with friends â€”"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_room"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="ðŸ  Create Room"
            android:textSize="15sp"
            android:textAllCaps="false"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="12dp" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Code"
                app:boxBackgroundColor="@color/surface_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_room_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:inputType="textCapCharacters"
                    android:maxLength="6"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:letterSpacing="0.2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_join_room"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="ðŸšª Join"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:backgroundTint="@color/purple_700"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Session Layout -->
    <LinearLayout
        android:id="@+id/layout_session"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Room & Timer Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:background="@drawable/bg_glass_dark"
            android:gravity="center_vertical">

            <!-- Room Code Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_glass_pill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ "
                    android:textSize="14sp" />
                    
                <TextView
                    android:id="@+id/text_room_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="ABCD12"
                    android:textColor="#FFD700"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.1"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Timer Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_glass_pill"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸"
                    android:textSize="16sp" />
                    
                <TextView
                    android:id="@+id/text_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="5:00"
                    android:textColor="#10B981"
                    android:textSize="18sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Partner & Role Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_glass_dark"
                android:padding="16dp">

                <!-- Partner Side -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp">
                        
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_profile_placeholder"
                            android:background="@drawable/bg_circle_button" />
                        
                        <ProgressBar
                            android:id="@+id/progress_partner"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom|end"
                            android:visibility="gone"
                            android:indeterminateTint="#10B981" />
                    </FrameLayout>
                    
                    <TextView
                        android:id="@+id/text_partner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Waiting..."
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Partner"
                        android:textColor="#64748B"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Role Badge (Center) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingHorizontal="16dp">
                    
                    <TextView
                        android:id="@+id/text_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš— DRIVER"
                        android:textColor="#10B981"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_glass_pill"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp" />
                        
                    <TextView
                        android:id="@+id/text_role_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Fix the code!"
                        android:textColor="#94A3B8"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- You Side -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/img_user_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_profile_placeholder"
                        android:background="@drawable/bg_circle_purple" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="You"
                        android:textColor="#A78BFA"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Ready âœ“"
                        android:textColor="#10B981"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bug Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/text_bug_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ› Bug Title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_bug_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Description..."
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:maxLines="2" />
        </LinearLayout>

        <!-- Partner Message Bubble -->
        <TextView
            android:id="@+id/text_partner_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:padding="12dp"
            android:background="@drawable/bg_chat_bubble"
            android:text="ðŸ’¬ Partner: Looking at the code..."
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone" />

        <!-- Code Editor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#0F0F1A"
            app:cardCornerRadius="12dp">

            <ScrollView
                android:id="@+id/scroll_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:gravity="top"
                    android:background="@null"
                    android:inputType="textMultiLine"
                    android:minLines="10" />
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:background="@drawable/bg_glass_dark">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_switch_role"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="ðŸ”„ Switch"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#1A1A2E"
                app:backgroundTint="#FFD700"
                app:cornerRadius="14dp"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_hint"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                android:text="ðŸ’¡ Ask"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="#8B5CF6"
                app:cornerRadius="14dp"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="âœ… Submit"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="#1A1A2E"
                app:backgroundTint="#10B981"
                app:cornerRadius="14dp"
                app:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
