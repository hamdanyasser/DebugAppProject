<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUGMASTER - Free Collection Card Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow effect -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#4006B6D4" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1A1A2E"
                android:centerColor="#0A0F1E"
                android:endColor="#12082F" />
        </shape>
    </item>
    
    <!-- Inner border glow -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <stroke android:width="1dp" android:color="#2006B6D4" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
</layer-list>
